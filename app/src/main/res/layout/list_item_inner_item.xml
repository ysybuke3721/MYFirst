<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_padding"
    android:layout_marginRight="@dimen/layout_padding"
    android:background="@color/order_farm_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/list_img_1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原生态鸡蛋"
            android:textColor="@color/text2"
            android:textSize="@dimen/text2" />

        <TextView
            android:id="@+id/tv_seller_commend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding"
            android:text="卖家承诺2小时内送达"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/text4" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding"
            android:text="￥150.0"
            android:textColor="@color/bt_red"
            android:textSize="@dimen/text3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/layout_padding"
            android:text="x1"
            android:textColor="@color/text2"
            android:textSize="@dimen/text1" />
    </RelativeLayout>

</LinearLayout>