<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="@dimen/padding"
    android:background="@color/color4">

    <ImageView
        android:id="@+id/distributors_icon_iv"
        android:layout_width="@dimen/my_face"
        android:layout_height="@dimen/my_face"
        android:background="@mipmap/face"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_alignTop="@id/distributors_icon_iv"
        android:layout_alignBottom="@id/distributors_icon_iv"
        android:layout_marginLeft="@dimen/padding"
        android:layout_toRightOf="@id/distributors_icon_iv"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/distributors_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称：丑小鸭"
            android:textSize="@dimen/text2"
            android:textColor="@color/text1"/>

        <TextView
            android:layout_marginTop="@dimen/padding"
            android:id="@+id/distributors_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单：0个"
            android:textSize="@dimen/text3"
            android:textColor="@color/text1"/>

        <TextView
            android:layout_marginTop="@dimen/padding"
            android:id="@+id/distributors_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间：2016-07-19"
            android:textSize="@dimen/text3"
            android:textColor="@color/text1"/>
    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/distributors_totleprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥50"
        android:textColor="@color/bt_red"
        android:textSize="@dimen/text1"/>


</RelativeLayout>