<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_marginTop="@dimen/marginTop"
        android:layout_gravity="center_horizontal"
        android:id="@+id/notice_logistices_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text3"
        android:textSize="@dimen/text3"/>

    <RelativeLayout
        android:id="@+id/notice_logistices_item"
        android:layout_margin="@dimen/padding"
        android:padding="@dimen/padding"
        android:background="@drawable/shape_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/padding"
            android:layout_gravity="center_horizontal"
            android:id="@+id/notice_logistices_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:textSize="@dimen/text1"
            android:lines="1"
            android:ellipsize="end"/>


        <ImageView
            android:layout_below="@id/notice_logistices_name"
            android:layout_marginTop="@dimen/padding"
            android:id="@+id/notice_logistices_icon"
            android:layout_width="@dimen/img_height"
            android:layout_height="@dimen/img_height"/>


        <TextView
            android:layout_marginLeft="@dimen/padding"
            android:layout_toRightOf="@id/notice_logistices_icon"
            android:layout_below="@id/notice_logistices_name"
            android:layout_marginTop="@dimen/padding"
            android:layout_gravity="center_horizontal"
            android:id="@+id/notice_logistices_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:textSize="@dimen/text2"
            android:lines="4"
            android:ellipsize="end"
            android:drawablePadding="@dimen/padding"/>
        <!--android:drawableRight="@mipmap/jinru"-->

    </RelativeLayout>

</LinearLayout>