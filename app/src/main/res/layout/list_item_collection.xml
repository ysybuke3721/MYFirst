<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="@dimen/padding"
    android:background="@color/color4">

    <ImageView
        android:id="@+id/my_collection_icon_iv"
        android:layout_width="@dimen/my_face"
        android:layout_height="@dimen/my_face"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_alignTop="@id/my_collection_icon_iv"
        android:layout_alignBottom="@id/my_collection_icon_iv"
        android:layout_marginLeft="@dimen/padding"
        android:layout_toRightOf="@id/my_collection_icon_iv"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_collection_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text2"
            android:textColor="@color/text1"/>

        <TextView
            android:layout_marginTop="@dimen/padding"
            android:id="@+id/my_collection_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textSize="@dimen/text3"
            android:textColor="@color/bt_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:background="@drawable/shape_bt2"
            android:id="@+id/my_collection_bt"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="查看"
            android:textColor="@color/color4"
            android:textSize="@dimen/text3"/>

        <Button
            android:layout_marginTop="@dimen/padding"
            android:background="@drawable/shape_bt1"
            android:id="@+id/my_collection_delete"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="取消"
            android:textColor="@color/color2"
            android:textSize="@dimen/text3"/>
    </LinearLayout>



</RelativeLayout>