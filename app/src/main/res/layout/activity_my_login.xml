<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context="com.slr.slrapp.activitys.MyLoginActivity">

    <com.slr.slrapp.widget.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:border_color="@color/white"
        app:border_width="2dp"
        android:layout_marginTop="@dimen/rl_margin_ll"
        android:src="@mipmap/icon_default" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/img_pading"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_height"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/back_padding"
                android:src="@mipmap/dl_name" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_weight="1"
                android:background="@color/transport"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:singleLine="true"
                android:inputType="phone"
                android:textColorHint="@color/white"
                android:textColor="@color/color4"
                android:textSize="@dimen/text1" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_cancel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/back_padding"
                android:src="@mipmap/cancl" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="@dimen/dl_line_margin_top"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/et_margin_et"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/back_padding"
                android:src="@mipmap/dl_lock" />

            <EditText
                android:id="@+id/et_user_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_weight="1"
                android:maxLength="12"
                android:background="@color/transport"
                android:textColor="@color/color4"
                android:hint="请输入6-12位密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text1" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_cancel_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/back_padding"
                android:src="@mipmap/cancl" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="@dimen/dl_line_margin_top"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/tv_forget_pwd"
                android:textColor="@color/white"
                android:textSize="@dimen/text2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_right"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_dl_btn"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_8"
                android:paddingLeft="@dimen/padding_40"
                android:paddingRight="@dimen/padding_40"
                android:paddingTop="@dimen/padding_8"
                android:text="@string/tv_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text1" />

            <TextView
                android:id="@+id/btn_zc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_right"
                android:background="@drawable/shape_zc_btn"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_8"
                android:paddingLeft="@dimen/padding_40"
                android:paddingRight="@dimen/padding_40"
                android:paddingTop="@dimen/padding_8"
                android:text="@string/tv_zhuce"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/text1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginRight="@dimen/layout_padding"
            android:layout_marginTop="@dimen/padding_40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_weight="1"
                android:background="@color/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/third_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text2" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_weight="1"
                android:background="@color/line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/dl_weibo" />

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/dl_weixin" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/qq" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
