<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_padding"
    android:paddingBottom="@dimen/layout_padding"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="@dimen/padding"
        android:id="@+id/img_list_item"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:scaleType="fitXY"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:text=""
            android:textColor="@color/text1"
            android:textSize="@dimen/farmer_select_tv_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_padding"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/list_item_rbar"
                style="@style/myRatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:max="5"
                android:rating="2" />

            <TextView
                android:id="@+id/list_item_tv_appraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:textColor="@color/text3"
                android:textSize="@dimen/text3"
                android:text="评价" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginTop="@dimen/text_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_tv_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text3"
                android:textColor="@color/text3"
                android:text="" />

            <TextView
                android:id="@+id/list_item_tv_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
               android:textColor="@color/text3"
                android:singleLine="true"
                android:ellipsize="end"
               android:textSize="@dimen/text3"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>