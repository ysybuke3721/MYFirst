<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/layout_titlebar"/>

    <RelativeLayout
        android:padding="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈描述"
            android:textColor="@color/text2"
            android:textSize="@dimen/text2"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/feedback_et"
        android:gravity="top"
        android:padding="10dp"
        android:layout_margin="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bt1"
        android:textSize="@dimen/text3"
        android:textColor="@color/text1"
        android:textColorHint="@color/text3"
        android:hint="请详细描述您遇到的问题"
        android:minLines="5"/>

    <Button
        android:id="@+id/feedback_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="@color/color4"
        android:textSize="@dimen/text1"
        android:background="@drawable/shape_bt"
        android:layout_margin="50dp"/>

</LinearLayout>