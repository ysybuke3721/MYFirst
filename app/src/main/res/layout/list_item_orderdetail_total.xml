<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总金额"
            android:textColor="@color/text1"
            android:textSize="@dimen/text2"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/item_myorderdetail_totleprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥150.00"
            android:textColor="@color/bt_red"
            android:textSize="@dimen/text2"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/text1"
            android:textSize="@dimen/text2"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/item_myorderdetail_freightmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="@color/bt_red"
            android:textSize="@dimen/text2"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="right">

        <TextView
            android:id="@+id/item_myorderdetail_orderdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text3"
            android:textColor="@color/text3"
            android:text="下单时间：2012-12-36 12:36:00"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <Button
            android:id="@+id/order_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_bt2"
            android:layout_alignParentRight="true"
            android:text="删除订单"
            android:textColor="@color/color4"
            android:layout_marginBottom="50dp"/>

    </RelativeLayout>


</LinearLayout>